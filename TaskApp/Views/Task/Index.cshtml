@model TaskViewModel

<h2>Task List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni</a>
</p>

<form asp-controller="Task" asp-action="Index" method="get">
    <div class="form-group">
        <label asp-for="FilterDescription">Description:</label>
        <input type="text" class="form-control" asp-for="FilterDescription" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="Index" class="btn btn-secondary">Clear Filter</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Description</td>
                <td>@task.Date.ToString("MM/dd/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@task.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-12">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&filterDescription=@Model.FilterDescription">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
